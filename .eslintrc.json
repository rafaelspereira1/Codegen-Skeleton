{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "airbnb-typescript/base", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-console": "warn",
    "import/no-extraneous-dependencies": [
      "off",
      { "devDependencies": ["**/*.test.ts", "**/*.spec.ts"] }
    ]
  }
}
